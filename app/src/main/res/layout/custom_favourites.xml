<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/custom_favourite_relativelayout">

        <TextView
            android:id="@+id/feature_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/images"
            android:layout_toRightOf="@+id/images"
            android:text="New Dac"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/feature_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/feature_tv1"
            android:layout_marginStart="31dp"
            android:layout_toEndOf="@id/images"
            android:text="Miles" />

        <TextView
            android:id="@+id/feature_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/feature_tv2"
            android:layout_marginStart="31dp"
            android:layout_toEndOf="@id/images"
            android:text="Sansome street" />

        <ImageView
            android:id="@+id/images1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/feature_tv3"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@id/images"
            android:background="@drawable/star1" />

        <ImageView
            android:id="@+id/images2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/feature_tv3"
            android:layout_marginStart="46dp"
            android:layout_toEndOf="@id/images"
            android:background="@drawable/star1" />

        <ImageView
            android:id="@+id/images3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/feature_tv3"
            android:layout_marginStart="59dp"
            android:layout_toEndOf="@id/images"
            android:background="@drawable/star1" />

        <ImageView
            android:id="@+id/images4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/feature_tv3"
            android:layout_marginStart="73dp"
            android:layout_toEndOf="@id/images"
            android:background="@drawable/star1" />

        <ImageView
            android:id="@+id/images5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/feature_tv3"
            android:layout_marginStart="86dp"
            android:layout_toEndOf="@id/images"
            android:background="@drawable/star1" />

        <ImageView
            android:id="@+id/images"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/feature_tv1"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/arrow"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>
</RelativeLayout>